---
import { getCollection } from 'astro:content';

const posts = await getCollection('blog', ({ data }) => {
  return !data.draft;
});

const sortedPosts = posts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Calculate reading time more accurately (Chinese: 300 chars/min, English: 200 words/min)
function getReadingTime(content: string) {
  // Count Chinese characters (approximate)
  const chineseChars = (content.match(/[\u4e00-\u9fa5]/g) || []).length;
  
  // Count non-Chinese words
  const nonChineseContent = content.replace(/[\u4e00-\u9fa5]/g, '');
  const nonChineseWords = nonChineseContent.split(/\s+/).length;
  
  // Calculate reading time (Chinese: 300 chars/min, English: 200 words/min)
  const chineseMinutes = chineseChars / 300;
  const englishMinutes = nonChineseWords / 200;
  
  const totalMinutes = Math.ceil(chineseMinutes + englishMinutes);
  return `${totalMinutes} 分钟阅读`;
}
---

<section class="blog-list">
  <div class="max-w-2xl mx-auto px-8">
    <h1 class="text-4xl md:text-5xl font-bold tracking-tight text-gray-200 mb-12">Blog</h1>
    
    <div class="posts-grid">
      {sortedPosts.map(post => (
        <a href={`/blog/${post.slug}`} class="post-card">
          <time datetime={post.data.pubDate.toISOString()}>
            {post.data.pubDate.toLocaleDateString('en-GB', {
              day: '2-digit',
              month: '2-digit',
              year: '2-digit'
            }).replace(/\//g, '/')}
          </time>
          <h3>{post.data.title}</h3>
          <span class="reading-time">{getReadingTime(post.body)}</span>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .blog-list {
    margin: 3rem 0 4rem 0;
  }

  .posts-grid {
    display: grid;
    gap: 1.5rem;
    max-width: 100%;
  }

  .post-card {
    display: flex;
    align-items: center;
    gap: 2rem;
    text-decoration: none;
    color: var(--text, #000);
    padding: 1.25rem;
    border-radius: 12px;
    transition: all 0.2s ease;
    border: 1px solid transparent;
    overflow: hidden;
  }

  .post-card:hover {
    background-color: rgba(0, 0, 0, 0.02);
    border: 1px solid rgba(0, 0, 0, 0.1);
  }

  time {
    font-family: monospace;
    color: #888;
    font-size: 0.9rem;
    white-space: nowrap;
    min-width: 80px;
    flex-shrink: 0;
  }

  h3 {
    margin: 0;
    font-size: 1.1rem;
    font-weight: 500;
    line-height: 1.4;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    color: #000;
    flex: 1;
    min-width: 0;
  }

  .reading-time {
    font-family: monospace;
    color: #888;
    font-size: 0.9rem;
    white-space: nowrap;
    min-width: 90px;
    text-align: right;
    flex-shrink: 0;
  }

  @media (max-width: 768px) {
    .blog-list {
      margin: 4rem 0 4rem 0;
    }
    
    .post-card {
      gap: 1rem;
    }
    
    time {
      min-width: 70px;
    }
    
    h3 {
      font-size: 1.1rem;
    }
    
    .reading-time {
      min-width: 80px;
    }
  }
</style>
