---
import { getCollection, type CollectionEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props as { entry: CollectionEntry<'blog'> };
const { Content } = await entry.render();

// Format date
const formattedDate = entry.data.pubDate.toLocaleDateString('zh-CN', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

// 处理图片 URL，支持 Unsplash
const getImageUrl = (imageUrl) => {
  if (!imageUrl) return null;
  
  // 如果是完整的 URL（包括 Unsplash URL），直接返回
  if (imageUrl.startsWith('http')) {
    return imageUrl;
  }
  
  // 本地图片路径
  return imageUrl;
};

const imageUrl = getImageUrl(entry.data.image);
---

<BaseLayout title={`Far Light - ${entry.data.title}`}>
  <article class="blog-post">
    <div class="px-8 md:px-12 max-w-2xl mx-auto pt-12 pb-24">
      <div class="mb-8">
        <a href="/blog" class="text-sm text-zinc-500 hover:text-black">← Back to Blog</a>
      </div>
      
      <header class="mb-12">
        <h1 class="text-2xl md:text-3xl font-bold tracking-tight text-black mb-4">{entry.data.title}</h1>
        <div class="flex items-center gap-4 text-zinc-500 text-sm">
          <time datetime={entry.data.pubDate.toISOString()}>{formattedDate}</time>
        </div>
      </header>
      
      {imageUrl && (
        <div class="mb-12 rounded-xl overflow-hidden aspect-video">
          <img 
            src={imageUrl} 
            alt={entry.data.title} 
            class="w-full h-full object-cover"
          />
        </div>
      )}
      
      <div class="prose prose-zinc max-w-none">
        <Content />
      </div>
    </div>
  </article>
</BaseLayout>

<style is:global>
  .prose {
    max-width: 65ch;
    color: #374151;
  }
  
  .prose h1 {
    font-size: 2.25rem;
    font-weight: 700;
    margin-top: 0;
    margin-bottom: 1.5rem;
    line-height: 1.2;
    color: #111827;
  }
  
  .prose h2 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 1rem;
    line-height: 1.3;
    color: #111827;
  }
  
  .prose p {
    margin-top: 1.25rem;
    margin-bottom: 1.25rem;
    line-height: 1.7;
  }
  
  .prose ul {
    margin-top: 1.25rem;
    margin-bottom: 1.25rem;
    padding-left: 1.625rem;
    list-style-type: disc;
  }
  
  .prose li {
    margin-top: 0.5rem;
    margin-bottom: 0.5rem;
    padding-left: 0.375rem;
  }
  
  .prose strong {
    font-weight: 600;
    color: #111827;
  }
  
  .prose a {
    color: #4b5563;
    font-weight: 600;
    text-decoration: none;
  }
  
  .prose a:hover {
    color: #111827;
  }
  
  @media (max-width: 768px) {
    .prose h1 {
      font-size: 1.875rem;
    }
    
    .prose h2 {
      font-size: 1.25rem;
    }
  }
</style>
